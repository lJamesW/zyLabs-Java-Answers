/**
Many documents use a specific format for a person's name. 
Write a program whose input is: firstName middleName lastName, and whose output is: lastName, firstName middleInitial.
Ex: If the input is Pat Silly Doe, the output is: Doe, Pat S.
If the input has the form firstName lastName, the output is lastName, firstName.
Ex: If the input is: Julia Clark, the output is: Clark, Julia
 */
 
import java.util.Scanner;

public class LabProgram {
   public static void main(String[] args) {
      String firstName;
      String lastName;
      String middleName;
      char firstInital;
      char middleInital;
      
    Scanner scnr = new Scanner (System.in);
    
    firstName = scnr.next();
    middleName = scnr.next();
    
    if (!scnr.hasNext()) {
       lastName = middleName;
       
       firstInital = firstName.charAt(0);
       
       System.out.println(lastName + ", " + firstName + ".");
       }
       
   else {
        lastName = scnr.next();
        
        firstInital = firstName.charAt(0);
        middleInital = middleName.charAt(0);
        
        System.out.println(lastName + ", " + firstInital + "." + middleInital + ".");
        
   }
   }
}

